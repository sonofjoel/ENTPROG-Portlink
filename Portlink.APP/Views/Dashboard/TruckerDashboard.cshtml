@{
    ViewData["Title"] = "Trucker Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }

        .dashboard-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .delivery-card {
            background: white;
            border: none;
            border-radius: 15px;
            margin-bottom: 15px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            border-left: 4px solid #28a745;
        }

            .delivery-card:hover {
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        .btn-custom {
            border-radius: 25px;
            padding: 10px 25px;
            font-weight: 600;
        }

        .status-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <!-- Header -->
        <div class="dashboard-header text-center">
            <h1><i class="fas fa-truck me-3"></i>Trucker Dashboard</h1>
            <p class="mb-0">Welcome back, @ViewBag.UserName!</p>
            <p class="mb-0">View and manage available deliveries</p>
        </div>

        <!-- Available Deliveries Section -->
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card" style="border-radius: 15px; border: none; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                    <div class="card-header bg-primary text-white" style="border-radius: 15px 15px 0 0;">
                        <h4><i class="fas fa-truck-loading me-2"></i>Available Deliveries</h4>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.AvailableDeliveries != null && ((IEnumerable<dynamic>)ViewBag.AvailableDeliveries).Any())
                        {
                            @foreach (var delivery in ((IEnumerable<dynamic>)ViewBag.AvailableDeliveries))
                            {
                                <div class="delivery-card card">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-3">
                                                <h5 class="mb-1 text-primary">@delivery.User.CompanyName</h5>
                                                <small class="text-muted">Booking ID: #@delivery.BookingID</small>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="mb-2">
                                                    <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                                    <strong>From:</strong> @delivery.Schedule.Port.PortName
                                                </div>
                                                <div>
                                                    <i class="fas fa-arrow-right text-success me-2"></i>
                                                    <strong>To:</strong> @delivery.DropOff
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="mb-1">
                                                    <i class="fas fa-calendar text-info me-1"></i>
                                                    <strong>@delivery.BookingDate.ToString("MMM dd, yyyy")</strong>
                                                </div>
                                                <div>
                                                    <i class="fas fa-clock text-warning me-1"></i>
                                                    @delivery.BookingDate.ToString("HH:mm")
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <span class="status-badge bg-success text-white">@delivery.Status</span>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                <button class="btn btn-outline-primary btn-custom">
                                                    <i class="fas fa-hand-paper me-1"></i>Take Job
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <img src="https://placehold.co/300x200" alt="Empty delivery truck on highway with no cargo, representing no available deliveries" class="mb-3">
                                <h4 class="text-muted">No Available Deliveries</h4>
                                <p class="text-muted">Check back later for new delivery opportunities</p>
                                <button class="btn btn-primary btn-custom">
                                    <i class="fas fa-refresh me-2"></i>Refresh
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
