@{
    ViewData["Title"] = "Trucker Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
        }
        .dashboard-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .stat-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .delivery-card {
            background: white;
            border: none;
            border-radius: 15px;
            margin-bottom: 15px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            border-left: 4px solid #28a745;
        }
        .delivery-card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        .btn-custom {
            border-radius: 25px;
            padding: 10px 25px;
            font-weight: 600;
        }
        .status-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }
        .icon-large {
            font-size: 2.5rem;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <!-- Header -->
        <div class="dashboard-header text-center">
            <h1><i class="fas fa-truck me-3"></i>Trucker Dashboard</h1>
            <p class="mb-0">Welcome back, @ViewBag.UserName!</p>
            <p class="mb-0">Manage your deliveries and find new opportunities</p>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stat-card text-center">
                    <i class="fas fa-boxes icon-large text-primary"></i>
                    <h3 class="text-primary">@(ViewBag.AvailableDeliveries?.Count ?? 0)</h3>
                    <p class="text-muted mb-0">Available Deliveries</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card text-center">
                    <i class="fas fa-clipboard-check icon-large text-success"></i>
                    <h3 class="text-success">@(ViewBag.MyBookings?.Count ?? 0)</h3>
                    <p class="text-muted mb-0">My Active Jobs</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card text-center">
                    <i class="fas fa-dollar-sign icon-large text-warning"></i>
                    <h3 class="text-warning">$2,450</h3>
                    <p class="text-muted mb-0">This Month Earnings</p>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row">
            <!-- Available Deliveries -->
            <div class="col-md-8">
                <div class="card" style="border-radius: 15px; border: none; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                    <div class="card-header bg-primary text-white" style="border-radius: 15px 15px 0 0;">
                        <h5><i class="fas fa-truck-loading me-2"></i>Available Deliveries</h5>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.AvailableDeliveries != null && ((IEnumerable<dynamic>)ViewBag.AvailableDeliveries).Any())
                        {
                            @foreach (var delivery in ((IEnumerable<dynamic>)ViewBag.AvailableDeliveries).Take(8))
                            {
                                <div class="delivery-card card">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-md-3">
                                                <h6 class="mb-1">@delivery.User.CompanyName</h6>
                                                <small class="text-muted">#@delivery.BookingID</small>
                                            </div>
                                            <div class="col-md-3">
                                                <i class="fas fa-map-marker-alt text-primary me-1"></i>
                                                <span>@delivery.Schedule.Port.PortName</span>
                                                <br>
                                                <small class="text-muted">@delivery.DropOff</small>
                                            </div>
                                            <div class="col-md-2">
                                                <i class="fas fa-calendar text-info me-1"></i>
                                                <span>@delivery.BookingDate.ToString("MMM dd")</span>
                                                <br>
                                                <small class="text-muted">@delivery.BookingDate.ToString("HH:mm")</small>
                                            </div>
                                            <div class="col-md-2">
                                                <span class="status-badge bg-success text-white">@delivery.Status</span>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                <button class="btn btn-outline-primary btn-sm btn-custom">
                                                    <i class="fas fa-hand-paper me-1"></i>Take Job
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <img src="https://storage.googleapis.com/workspace-0f70711f-8b4e-4d94-86f1-2a93ccde5887/image/efadd03d-8840-4fd0-93ba-36962a835d83.png" alt="Empty truck on an open road with delivery packages waiting to be collected" class="mb-3">
                                <h6>No available deliveries at the moment</h6>
                                <p class="text-muted">Check back later for new opportunities</p>
                                <button class="btn btn-primary btn-custom">
                                    <i class="fas fa-search me-2"></i>Search Deliveries
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions & My Jobs -->
            <div class="col-md-4">
                <!-- Quick Actions -->
                <div class="card mb-4" style="border-radius: 15px; border: none; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                    <div class="card-header bg-success text-white" style="border-radius: 15px 15px 0 0;">
                        <h5><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <button class="btn btn-outline-primary btn-custom">
                                <i class="fas fa-plus me-2"></i>New Delivery Request
                            </button>
                            <button class="btn btn-outline-info btn-custom">
                                <i class="fas fa-route me-2"></i>Plan Route
                            </button>
                            <button class="btn btn-outline-warning btn-custom">
                                <i class="fas fa-gas-pump me-2"></i>Fuel Tracker
                            </button>
                            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger btn-custom">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a>
                        </div>
                    </div>
                </div>

                <!-- My Current Jobs -->
                <div class="card" style="border-radius: 15px; border: none; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                    <div class="card-header bg-warning text-dark" style="border-radius: 15px 15px 0 0;">
                        <h5><i class="fas fa-clipboard-list me-2"></i>My Current Jobs</h5>
                    </div>
                    <div class="card-body">
                        @if (ViewBag.MyBookings != null && ((IEnumerable<dynamic>)ViewBag.MyBookings).Any())
                        {
                            @foreach (var job in ((IEnumerable<dynamic>)ViewBag.MyBookings).Take(3))
                            {
                                <div class="border-bottom pb-2 mb-2">
                                    <h6 class="mb-1">#@job.BookingID</h6>
                                    <small class="text-muted d-block">@job.Schedule.Port.PortName → @job.DropOff</small>
                                    <span class="status-badge bg-primary text-white">@job.Status</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-3">
                                <i class="fas fa-clipboard text-muted" style="font-size: 2rem;"></i>
                                <p class="text-muted mt-2 mb-0">No active jobs</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
